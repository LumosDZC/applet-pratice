/* pages/collect/index.wxss */
.collect_main {
  background: #f3f4f6;
}
.collect_main .collect_title {
  padding: 40rpx 0;
}
.collect_main .collect_title .collect_tips {
  margin: 0 20rpx;
  color: #666;
  padding: 15rpx;
  font-size: 32rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  text-align: center;
}
.collect_main .collect_title .active {
  color: var(--themeColor);
  border-color: currentColor;
}
.collect_main .collect_content {
  background: #fff;
}
.collect_main .collect_content navigator {
  display: flex;
  min-height: 200rpx;
  border-bottom: 1px solid #ccc;
}
.collect_main .collect_content navigator .good_img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.collect_main .collect_content navigator .good_img image {
  width: 70%;
}
.collect_main .collect_content navigator .good_info {
  flex: 3;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.collect_main .collect_content navigator .good_info .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  max-height: 68rpx;
}
.collect_main .collect_content navigator .good_info .good_price {
  color: var(--themeColor);
}
